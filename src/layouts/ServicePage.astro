---
import BaseLayout from './BaseLayout.astro';
import GoogleMaps from '../components/GoogleMaps.astro';
import contactData from '../config/contact.json';

export interface Props {
  serviceName: string;
  serviceDescription: string;
  benefits: string[];
  process: string[];
  images: string[];
  heroImage?: string;
}

const { serviceName, serviceDescription, benefits, process, images, heroImage } = Astro.props;
const { contact } = contactData;
---

<BaseLayout title={`${serviceName} - UmutTaxi`}>
  <!-- Hero Section -->
  <section class="relative py-32 lg:py-40 overflow-hidden">
    <!-- Background with fallback -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary-500 to-primary-600"></div>
    {heroImage && (
      <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style={`background-image: url('${heroImage}');`}></div>
    )}
    
    <!-- Dark overlay for better text readability -->
    <div class="absolute inset-0 bg-black bg-opacity-60"></div>
    
    <div class="relative z-10 container mx-auto px-4 text-center text-white">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          {serviceName}
        </h1>
        <p class="text-lg md:text-xl lg:text-2xl mb-8 max-w-3xl mx-auto leading-relaxed">
          {serviceDescription}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href={`tel:${contact.phone.primary}`} class="bg-primary-500 text-black px-8 py-4 rounded-lg font-semibold text-lg hover:bg-primary-400 transition-colors shadow-lg hover:shadow-xl transform hover:-translate-y-1">
            <span class="flex items-center justify-center">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
              </svg>
              Jetzt anrufen
            </span>
          </a>

        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Benefits -->
        <h2 class="text-2xl font-semibold text-black mb-6">Vorteile</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
          {benefits.map((benefit) => (
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-primary-500 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <h3 class="font-semibold text-black">{benefit}</h3>
            </div>
          ))}
        </div>

        <!-- Process -->
        <h2 class="text-2xl font-semibold text-black mb-6">Ablauf</h2>
        <div class="space-y-4 mb-8">
          {process.map((step, index) => (
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-primary-500 text-black rounded-full flex items-center justify-center font-semibold mr-4">
                {index + 1}
              </div>
              <p class="text-gray-600">{step}</p>
            </div>
          ))}
        </div>

        <!-- Images -->
        {images && images.length > 0 && (
          <>
            <h2 class="text-2xl font-semibold text-black mb-6">Bilder</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
              {images.map((image, index) => (
                <div class="bg-cover bg-center bg-no-repeat rounded-lg overflow-hidden h-48" style={`background-image: url('${image}');`}>
                </div>
              ))}
            </div>
          </>
        )}

        <!-- CTA -->
        <div class="bg-primary-50 border border-primary-200 rounded-lg p-6 text-center">
          <h2 class="text-2xl font-semibold text-black mb-4">Bereit für Ihre Fahrt?</h2>
          <p class="text-gray-600 mb-4">Kontaktieren Sie uns für ein unverbindliches Angebot</p>
          <a href={`tel:${contact.phone.primary}`} class="inline-block bg-primary-500 text-black px-8 py-3 rounded-lg font-semibold hover:bg-primary-400 transition-colors">
            Jetzt anrufen
          </a>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <!-- Services -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6 border border-gray-200">
          <h3 class="text-lg font-semibold text-black mb-4">Unsere Dienstleistungen</h3>
          <ul class="space-y-2">
            <li>
              <a href="/flughafentransfer" class="text-primary-500 hover:text-primary-400 font-medium">
                Flughafentransfer
              </a>
            </li>
            <li>
              <a href="/limousinenservice" class="text-primary-500 hover:text-primary-400 font-medium">
                Limousinenservice
              </a>
            </li>
            <li>
              <a href="/schuelertransport" class="text-primary-500 hover:text-primary-400 font-medium">
                Schülertransport
              </a>
            </li>
            <li>
              <a href="/hoteltransfer" class="text-primary-500 hover:text-primary-400 font-medium">
                Hoteltransfer
              </a>
            </li>
          </ul>
        </div>

        <!-- Contact Info -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6 border border-gray-200">
          <div class="flex items-center mb-4">
            <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 6.105l.774-1.548a1 1 0 011.21-.502l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 21 3 14.284 3 6V5z"></path>
            </svg>
            <h3 class="font-semibold text-black ml-2">Kontakt</h3>
          </div>
          <div class="space-y-2">
            <p class="text-gray-600">
              <a href={`tel:${contact.phone.primary}`} class="text-primary-500 hover:text-primary-400">{contact.phone.primary}</a>
            </p>
            <p class="text-gray-600">
              <a href={`mailto:${contact.email.info}`} class="text-primary-500 hover:text-primary-400">{contact.email.info}</a>
            </p>
          </div>
        </div>

        <!-- Quick Contact Form -->
        <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200">
          <h3 class="text-lg font-semibold text-black mb-4">Schnelle Anfrage</h3>
          <form 
            name="service-inquiry" 
            method="POST" 
            data-netlify="true" 
            netlify-honeypot="bot-field"
            class="space-y-4"
          >
            <!-- Hidden inputs for Netlify -->
            <input type="hidden" name="form-name" value="service-inquiry" />
            <p class="hidden">
              <label>
                Don't fill this out if you're human: <input name="bot-field" />
              </label>
            </p>
            
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
              <input type="text" id="name" name="name" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Telefonnummer</label>
              <input type="tel" id="phone" name="phone" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
            </div>
            <div>
              <label for="pickup" class="block text-sm font-medium text-gray-700 mb-1">Abholadresse</label>
              <input type="text" id="pickup" name="pickup" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
            </div>
            <div>
              <label for="destination" class="block text-sm font-medium text-gray-700 mb-1">Zieladresse</label>
              <input type="text" id="destination" name="destination" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
            </div>
            <div>
              <label for="datetime" class="block text-sm font-medium text-gray-700 mb-1">Datum und Uhrzeit</label>
              <input type="datetime-local" id="datetime" name="datetime" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
            </div>
            <button type="submit" class="w-full bg-primary-500 text-black py-2 px-4 rounded-md hover:bg-primary-400 transition-colors">
              Anfrage senden
            </button>
          </form>
        </div>

        <!-- Map -->
        <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200">
          <h3 class="text-lg font-semibold text-black mb-4">Standort</h3>
          <GoogleMaps />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
