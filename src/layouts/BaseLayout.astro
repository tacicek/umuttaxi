          <!-- Action Buttons and Mobile Menu -->
          <div class="flex items-center space-x-2 md:space-x-3">
            <!-- Mobile Menu Button -->
            <div class="md:hidden flex-shrink-0">
              <button id="mobile-menu-btn" class="text-gray-700 hover:text-primary-500 p-1">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
              </button>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center space-x-2 md:space-x-3">
              <a href={`tel:${contact.phone.primary}`} class="bg-primary-500 text-black px-2 py-1 md:px-4 md:py-2 rounded-lg font-semibold text-xs md:text-sm hover:bg-primary-400 transition-colors whitespace-nowrap flex-shrink-0">
                <span class="hidden sm:inline">Jetzt anrufen</span>
                <span class="sm:hidden">üìû</span>
              </a>

            </div>
          </div>
        </div>

        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" class="md:hidden hidden mt-4 pb-4 border-t border-gray-200">
          <nav class="flex flex-col space-y-3 pt-4">
            <a href="/" class="text-black hover:text-primary-500 font-medium transition-colors">Startseite</a>
            <a href="/ueber-uns" class="text-black hover:text-primary-500 font-medium transition-colors">√úber uns</a>
            <div class="space-y-2">
              <div class="text-black font-medium">Dienstleistungen</div>
              <div class="pl-4 space-y-2">
                <a href="/flughafentransfer" class="block text-gray-600 hover:text-primary-500 transition-colors">Flughafentransfer</a>
                <a href="/limousinenservice" class="block text-gray-600 hover:text-primary-500 transition-colors">Limousinenservice</a>
                <a href="/schuelertransport" class="block text-gray-600 hover:text-primary-500 transition-colors">Sch√ºlertransport</a>
                <a href="/hoteltransfer" class="block text-gray-600 hover:text-primary-500 transition-colors">Hoteltransfer</a>
              </div>
            </div>
            <a href="/kontakt" class="text-black hover:text-primary-500 font-medium transition-colors">Kontakt</a>
          </nav>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <main class="pt-20 md:pt-16">
      <slot />
    </main>

    <!-- WhatsApp Button -->
    <div class="fixed bottom-6 right-6 z-50">
      <a 
        href={`https://wa.me/${contact.phone.whatsapp.replace(/[^0-9]/g, '')}?text=Hallo%20UmutTaxi!%20Ich%20m√∂chte%20gerne%20eine%20Fahrt%20buchen.%20K√∂nnen%20Sie%20mir%20helfen%3F`}
        target="_blank"
        rel="noopener noreferrer"
        class="bg-green-500 hover:bg-green-600 text-white p-4 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-110 flex items-center justify-center group"
        aria-label="WhatsApp kontakt"
      >
        <!-- WhatsApp Icon -->
        <svg class="w-6 h-6 md:w-7 md:h-7" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
        </svg>
        
        <!-- Desktop text -->
        <span class="hidden md:block ml-2 font-medium">WhatsApp</span>
        
        <!-- Hover tooltip for mobile -->
        <div class="absolute bottom-full right-0 mb-2 px-3 py-1 bg-gray-900 text-white text-sm rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap md:hidden">
          WhatsApp Chat
          <div class="absolute top-full right-4 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-gray-900"></div>
        </div>
      </a>
    </div>

    <!-- Footer -->
    <footer class="bg-black text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <div class="flex items-center mb-4">
              <div class="bg-primary-500 p-2 rounded-lg">
                <img src="/Umuttaxi-logo.webp" alt="UmutTaxi Logo" class="w-10 h-10 md:w-14 md:h-14">
              </div>
            </div>
            <p class="text-gray-300">
              Professioneller Taxiservice in Z√ºrich-Schwarztenbach
            </p>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4 text-white">Kontakt</h4>
            <p class="text-gray-300">Telefon: {contact.phone.primary}</p>
            <p class="text-gray-300">Email: {contact.email.info}</p>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4 text-white">Dienstleistungen</h4>
            <ul class="text-gray-300 space-y-2">
              <li><a href="/flughafentransfer" class="hover:text-primary-500 transition-colors">Flughafentransfer</a></li>
              <li><a href="/limousinenservice" class="hover:text-primary-500 transition-colors">Limousinenservice</a></li>
              <li><a href="/schuelertransport" class="hover:text-primary-500 transition-colors">Sch√ºlertransport</a></li>
              <li><a href="/hoteltransfer" class="hover:text-primary-500 transition-colors">Hoteltransfer</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-300">
          <p>&copy; 2024 UmutTaxi. Alle Rechte vorbehalten.</p>
